{
  "compilerOptions": {
    "allowJs": true, //
    "allowSyntheticDefaultImports": true, //
    "esModuleInterop": true, //
    "isolatedModules": true, //
    "jsx": "react-native", //
    "lib": ["es2017"], //
    "moduleResolution": "node",//
    "noEmit": true,//
    "strict": false, // change
    "target": "esnext", //
    //added
    "resolveJsonModule": true,
    "skipLibCheck": false,  
    "module": "commonjs",  
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}

